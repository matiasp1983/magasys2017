                                <asp:ListView ID="lsvReservaEdicion" runat="server" Visible="true" OnSelectedIndexChanged="lsvReservaEdicion_SelectedIndexChanged">
                                    <LayoutTemplate>
                                        <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                                            <thead>
                                                <tr>                                                    
